set nocompatible
set backspace=indent,eol,start
set directory^=$HOME/.vim/.swap_files
set encoding=utf-8
set fileencoding=utf-8
set fileencodings=ucs-bom,utf-8,latin1
set ruler
set colorcolumn=120
set laststatus=2
set autoindent
set hlsearch
execute pathogen#infect()
filetype plugin indent on
syntax on
