# vdr using tabpages
alias viet='vdr -t'

# `rg` aliases
arg() {
	rg --hidden --pretty --smart-case --glob \!.git $* | less
}

# Override .bashrc
export FZF_DEFAULT_COMMAND='fd --type file --hidden --exclude .git'

# Use Agnoster
export THEME=$HOME/.bash/themes/agnoster-bash/agnoster.bash
if [[ -f $THEME ]]; then
	export DEFAULT_USER=`whoami`
	source $THEME
fi
