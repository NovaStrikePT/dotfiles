{
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,

    "debug.showBreakpointsInOverviewRuler": true,

    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        { "column": 120, "color": "#FF00FF3F" },
        { "column": 140, "color": "#FF00003F" },
    ],

    "git.showCommitInput": false,
    "git.untrackedChanges": "separate",

    "merge-conflict.diffViewPosition": "Below",

    // Use the PowerShell Preview extension
    "powershell.developer.featureFlags": [ "PSReadLine" ],
    "powershell.integratedConsole.focusConsoleOnExecute": false,
    "powershell.powerShellAdditionalExePaths": [
        {
            "exePath": "pwsh.exe",
            "versionName": "PowerShell Core"
        }
    ],
    "powershell.powerShellDefaultVersion": "PowerShell Core",

    "search.showLineNumbers": true,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,


    "terminal.integrated.allowChords": false,
    "terminal.integrated.commandsToSkipShell": [
        // Alt-] and Alt-] are specifically used in terminal view to switch intra-terminal panes
        "workbench.action.nextPanelView",
        "workbench.action.nextSideBarView",
        "workbench.action.previousPanelView",
        "workbench.action.previousSideBarView",

        // Disable accidental Shift-Del on terminal (when intending to Cut from editor)
        "workbench.action.terminal.deleteToLineStart",

        // Ctrl-B (be able to toggle sidebar from terminal)
        "workbench.action.toggleSidebarVisibility",

        // Ctrl-Q (be able to use openView shortcut from terminal)
        "workbench.action.openView",
    ],
    "terminal.integrated.fontFamily": "Consolas",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.shell.windows": "pwsh.exe",
    "terminal.integrated.shellArgs.windows": [
        "-ExecutionPolicy", "Bypass",
        "-NoExit",
    ],

    // Control how new VSCode windows behave
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "inherit",
    "window.title": "${rootName}${separator}${dirty}${activeEditorMedium}${separator}${appName}",
    "window.titleBarStyle": "native",

    "workbench.activityBar.visible": true,

    "workbench.colorTheme": "One Monokai",
    "workbench.colorCustomizations": {
        // Assumes One Monokai theme
        // Determine if theme file eventually adds this after the VS Code v1.40 release (which added more activityBar styling)
        // See %HOME%\.vscode\extensions\azemoh.one-monokai-0.4.4\themes\OneMonokai-color-theme.json
        "activityBar.activeBackground": "#28495a",
        "activityBar.activeBorder": "#0981d0",

        "editor.lineHighlightBorder" : "#9872A2",
        "statusBar.background"       : "#002b36",
        "tab.activeBackground"       : "#005A6FAA",
    },
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.startupEditor": "newUntitledFile",

    "window.restoreWindows": "preserve",
    "window.zoomLevel": 0,
}
