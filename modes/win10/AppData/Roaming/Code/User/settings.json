{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "terminal.integrated.fontFamily": "Meslo LG S for Powerline",
    "terminal.integrated.fontSize": 12,
    "window.newWindowDimensions": "inherit",
    "window.restoreWindows": "none",
    "workbench.colorCustomizations": {
        // Assumes Dark+ (Default dark) theme
        "statusBar.background": "#002b36",
        // "tab.activeBackground": "#002B37",
        "tab.activeBackground": "#005A6FAA",
        // "tab.activeBackground": "#005A6F",

        // Terminal uses custom Monokai(-esque) colors
        "terminal.ansiBlack": "#272822",
        "terminal.ansiBlue": "#01549e",
        "terminal.ansiGreen": "#74aa04",
        "terminal.ansiCyan": "#1a83a6",
        "terminal.ansiRed": "#a70334",
        "terminal.ansiMagenta": "#89569c",
        "terminal.ansiYellow": "#b6b649",
        "terminal.ansiWhite": "#cacaca",
        "terminal.ansiBrightBlack": "#7c7c7c",
        "terminal.ansiBrightBlue": "#0383f5",
        "terminal.ansiBrightGreen": "#8dd006",
        "terminal.ansiBrightCyan": "#58c2e5",
        "terminal.ansiBrightRed": "#f3044b",
        "terminal.ansiBrightMagenta": "#a87db8",
        "terminal.ansiBrightYellow": "#cccc81",
        "terminal.ansiBrightWhite": "#ffffff",
    },
    "workbench.editor.closeOnFileDelete": false,
    "workbench.statusBar.feedback.visible": false,
}