{
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",

    "merge-conflict.diffViewPosition": "Below",

    "search.showLineNumbers": true,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // (VS Code 1.31.0) See https://code.visualstudio.com/updates/v1_31#_improvements-to-commandstoskipshell-setting
    "terminal.integrated.commandsToSkipShell": [
        // Alt-] and Alt-] are specifically used in terminal view to switch intra-terminal panes
        "workbench.action.nextPanelView",
        "workbench.action.nextSideBarView",
        "workbench.action.previousPanelView",
        "workbench.action.previousSideBarView",

        // Disable accidental Shift-Del on terminal (when intending to Cut from editor)
        "workbench.action.terminal.deleteToLineStart",

        // Ctrl-B (be able to toggle sidebar from terminal)
        "workbench.action.toggleSidebarVisibility",

        // Ctrl-Q (be able to use openView shortcut from terminal)
        "workbench.action.openView",
    ],
    "terminal.integrated.fontFamily": "Consolas",
    "terminal.integrated.fontSize": 14,
    // Use Cmder PowerShell profile settings
    // TODO: Set $env:CMDER_ROOT and use an environment-based profile path (see https://github.com/Microsoft/vscode/issues/2809)
    "terminal.integrated.shell.windows": "pwsh.exe",
    "terminal.integrated.shellArgs.windows": [
        "-ExecutionPolicy", "Bypass",
        "-NoLogo",
        "-NoProfile",
        "-NoExit",
        "-Command", ". 'C:\\Cmder\\vendor\\profile.ps1'",
    ],

    // Control how new VSCode windows behave
    "window.newWindowDimensions": "inherit",
    "window.title": "${rootName}${separator}${dirty}${activeEditorMedium}${separator}${appName}",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,

    "workbench.activityBar.visible": true,

    "workbench.colorCustomizations": {
        // Assumes Monokai Dimmed theme
        // See also Microsoft VS Code\resources\app\extensions\theme-monokai-dimmed\themes\dimmed-monokai-color-theme.json
        "editor.lineHighlightBackground": "#1e1e1e",
        "editor.lineHighlightBorder" : "#9872A2",
        "statusBar.background"         : "#002b36",
        "tab.activeBackground": "#005A6FAA",

        // Terminal uses custom Monokai(-esque) colors
        "terminal.ansiBlack": "#272822",
        "terminal.ansiBlue": "#01549e",
        "terminal.ansiGreen": "#74aa04",
        "terminal.ansiCyan": "#1a83a6",
        "terminal.ansiRed": "#a70334",
        "terminal.ansiMagenta": "#89569c",
        "terminal.ansiYellow": "#b6b649",
        "terminal.ansiWhite": "#cacaca",
        "terminal.ansiBrightBlack": "#7c7c7c",
        "terminal.ansiBrightBlue": "#0383f5",
        "terminal.ansiBrightGreen": "#8dd006",
        "terminal.ansiBrightCyan": "#58c2e5",
        "terminal.ansiBrightRed": "#f3044b",
        "terminal.ansiBrightMagenta": "#a87db8",
        "terminal.ansiBrightYellow": "#cccc81",
        "terminal.ansiBrightWhite": "#ffffff",
    },
    "workbench.colorTheme": "Monokai Dimmed",
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.startupEditor": "newUntitledFile",
}
