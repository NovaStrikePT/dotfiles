{
    "breadcrumbs.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,

    "debug.showBreakpointsInOverviewRuler": true,

    // Intellisense features
    "editor.acceptSuggestionOnEnter": "off",

    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        { "column": 120, "color": "#FF00FF3F" },
        { "column": 140, "color": "#FF00003F" },
    ],
    "editor.stickyScroll.enabled": true,

    // See also https://certitude.consulting/blog/en/invisible-backdoor/
    "editor.unicodeHighlight.ambiguousCharacters": true,
    "editor.unicodeHighlight.includeComments": true,
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.unicodeHighlight.nonBasicASCII": true,

    "explorer.fileNesting.enabled": true,

    "files.refactoring.autoSave": true,

    "git.showActionButton": {
        "commit": false,
        "publish": false,
        "sync": false
    },
    "git.showCommitInput": false,
    "git.timeline.showUncommitted": true,
    "git.untrackedChanges": "separate",

    "markdown.validate.enabled": true,

    "merge-conflict.diffViewPosition": "Below",

    "powershell.integratedConsole.focusConsoleOnExecute": false,

    "search.showLineNumbers": true,

    "telemetry.telemetryLevel": "off",

    "terminal.integrated.allowChords": false,
    "terminal.integrated.commandsToSkipShell": [
        // Alt-] and Alt-] are specifically used in terminal view to switch intra-terminal panes
        "workbench.action.nextPanelView",
        "workbench.action.nextSideBarView",
        "workbench.action.previousPanelView",
        "workbench.action.previousSideBarView",

        // Disable accidental Shift-Del on terminal (when intending to Cut from editor)
        "workbench.action.terminal.deleteToLineStart",

        // Ctrl-B (be able to toggle sidebar from terminal)
        "workbench.action.toggleSidebarVisibility",

        // Ctrl-Q (be able to use openView shortcut from terminal)
        "workbench.action.openView",
    ],
    "terminal.integrated.defaultProfile.windows": "PowerShell Core",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.fontFamily": "Consolas",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.profiles.windows": {
        "PowerShell Core": {
            "path": "pwsh.exe"
        },
        "Windows PowerShell": {
            "path": "powershell.exe"
        },
        // Disable some of the built-in profiles
        "Command Prompt": null,
        "PowerShell": null,
        "Git Bash": null
    },
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.enabled": true,

    // Control how new VSCode windows behave
    "window.menuBarVisibility": "toggle",
    "window.newWindowDimensions": "inherit",
    "window.restoreWindows": "preserve",
    "window.title": "${rootName}${separator}${dirty}${activeEditorMedium}${separator}${appName}",
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,

    "workbench.activityBar.visible": true,

    "workbench.colorTheme": "One Monokai",
    "workbench.colorCustomizations": {
        // Assumes One Monokai theme
        // Determine if theme file eventually adds this after the VS Code v1.40 release (which added more activityBar styling)
        // See %HOME%\.vscode\extensions\azemoh.one-monokai-0.4.4\themes\OneMonokai-color-theme.json
        "activityBar.activeBackground": "#28495a",
        "activityBar.activeBorder"    : "#0981d0",

        "editor.lineHighlightBorder" : "#9872A2",
        "statusBar.background"       : "#002b36",
        "tab.activeBackground"       : "#005A6FAA",
    },
    "workbench.editor.closeOnFileDelete": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.languageDetection": false,
    "workbench.editor.untitled.labelFormat": "name",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.untitled.hint": "hidden",
}
