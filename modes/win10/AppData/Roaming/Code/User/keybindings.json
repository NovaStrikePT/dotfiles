// Place your key bindings in this file to overwrite the defaults
[
    // Bindings for navigating between editor and terminal
    {
        "key": "alt+`",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        "key": "alt+`",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },

    // Binding for focusing on the active editor group (not from Terminal)
    // (Steal this from a default binding (I don't use Open Editors view))
    {
        "key": "ctrl+k e",
        "command": "-workbench.files.action.focusOpenEditorsView",
        "when": "workbench.explorer.openEditorsView.active"
    },
    {
        "key": "ctrl+k e",
        "command": "workbench.action.focusActiveEditorGroup"
    },

    // Navigate within side bar and panel views (contextual)
    // Also use more iTerm-esque pane navigation (context: terminal)
    { "key": "alt+]", "command": "workbench.action.nextEditor" },
    { "key": "alt+[", "command": "workbench.action.previousEditor" },
    {
      "key": "alt+]",
      "command": "workbench.action.nextSideBarView",
      "when": "sideBarFocus"
    },
    {
      "key": "alt+[",
      "command": "workbench.action.previousSideBarView",
      "when": "sideBarFocus"
    },
    {
      "key": "alt+]",
      "command": "workbench.action.nextPanelView",
      "when": "panelFocus"
    },
    {
      "key": "alt+[",
      "command": "workbench.action.previousPanelView",
      "when": "panelFocus"
    },
    {
        "key": "alt+]",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+[",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },

    // Use fish default keybindings for directory history navigation (prevd/nextd)
    {
        "key": "alt+left",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+right",
        "command": "-workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+left",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[1;3D\u007f" },
        "when": "terminalFocus"
        },
    {
        "key": "alt+right",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[1;3C\u007f" },
        "when": "terminalFocus"
    },
    {
        "key": "alt+up",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+down",
        "command": "-workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },

    // Use ctrl+q "slow" open view (instead of quick-open)
    {
        "key": "ctrl+shift+q",
        "command": "-workbench.action.quickOpenNavigatePreviousInViewPicker",
        "when": "inQuickOpen && inViewsPicker"
    },
    {
        "key": "ctrl+q",
        "command": "-workbench.action.quickOpenNavigateNextInViewPicker",
        "when": "inQuickOpen && inViewsPicker"
    },
    {
        "key": "ctrl+q",
        "command": "-workbench.action.quickOpenView"
    },
    {
        "key": "ctrl+q",
        "command": "workbench.action.openView"
    },

    // Toggle maximized panel (overrides default zoom keybindings)
    {
        "key": "ctrl+shift+-",
        "command": "-workbench.action.zoomOut"
    },
    {
        "key": "ctrl+shift+=",
        "command": "-workbench.action.zoomIn"
    },
    {
        "key": "ctrl+shift+-",
        "command": "workbench.action.toggleMaximizedPanel"
    },

    // Vim (and *nix terms) use ctrl+v
    {
        "key": "ctrl+v",
        "command": "-workbench.action.terminal.paste",
        "when": "terminalFocus"
    },

    // Let ctrl+delete deleteWordRight globally (this should override the default terminal.sendSequence binding)
    {
        "key": "ctrl+delete",
        "command": "deleteWordRight"
    },
]
